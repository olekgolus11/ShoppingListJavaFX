<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ListView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.shoppinglistjavafx.ShoppingListController">
    <HBox alignment="CENTER">
        <VBox spacing="20.0">
            <Label fx:id="selectedOptionText"/>
            <Button text="Add product to shopping list" onAction="#onAddProductButtonClick"/>
            <Button text="Display all selected products" onAction="#onDisplayAllProductsButtonClick"/>
            <Button text="Display all available products"
                    onAction="#onDisplayAllAvailableProductsButtonClick"/>
            <Button text="Reset shopping list" onAction="#onResetShoppingListButtonClick"/>
            <Button text="Delete all selected products from category"
                    onAction="#onDeleteAllProductsFromCategoryButtonClick"/>
            <Button text="Delete selected product from category" onAction="#onDeleteProductFromCategoryButtonClick"/>
            <Button text="Save list" onAction="#onSaveListButtonClick"/>
            <Button text="Exit" onAction="#onExitButtonClick"/>
        </VBox>
        <VBox spacing="20.0">
            <ListView fx:id="productsList" onMouseClicked="#handleSelectedListItem"/>
        </VBox>
    </HBox>

</VBox>
